{
  "name": "assistant",
  "root": "packages/assistant",
  "sourceRoot": "packages/assistant/src",
  "projectType": "library",
  "targets": {
    "tsc:build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "packages/assistant/dist"
      ],
      "options": {
        "rootDir": "packages/assistant",
        "outputPath": "packages/assistant/dist/",
        "main": "packages/assistant/launcher/index.ts",
        "tsConfig": "packages/assistant/tsconfig.launcher.json",
        "assets": [
          "packages/assistant/*.md"
        ]
      }
    },
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "packages/assistant/dist",
        "packages/assistant/build"
      ],
      "options": {
        "script": "conf:build"
      },
      "dependsOn": [
        "react:build",
        "tsc:build",
        "copy:sentences"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/assistant/src/**/*.{jsx,tsx}"],
        "fix": true,
        "eslintConfig": "packages/assistant/.eslintrc.json"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/assistant/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "plugins": [
          [
            "@semantic-release/npm",
            {
              "npmPublish": false,
              "tarballDir": "dist/packages",
              "pkgRoot": "packages/assistant"
            }
          ],
          [
            "@semantic-release/git",
            {
              "message": "chore(release): assistant ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
          ],
          [
            "@semantic-release/github",
            {
              "successComment": false,
              "failComment": false,
              "assets": [
                {
                  "path": "dist/packages/uuv-assistant-*.tgz",
                  "label": "Npm Package"
                }
              ]
            }
          ]
        ]
      }
    }
  }
}
